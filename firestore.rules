rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // User Profile Rules
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow write: if isOwner(userId);
    }

    // Question Bank Rules - Publicly readable for simulation entrance
    match /questions/{questionId} {
      allow read: if true;
      allow write: if false; 
    }

    // AI Explanations Cache
    match /ai_explanations/{questionId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }

    // Exam Results Rules
    match /exam_results/{resultId} {
      allow create: if isAuthenticated();
      allow get: if isAuthenticated() && resource.data.userId == request.auth.uid;
      // Enforce query filters for private data or strict limits for public leaderboards
      allow list: if (isAuthenticated() && resource.data.userId == request.auth.uid && request.query.limit <= 100) ||
                  (request.query.limit <= 10);
    }

    // Competition Events - Publicly readable for Arena entrance
    match /events/{eventId} {
      allow read: if true;
      allow write: if false;
    }

    match /event_leaderboard/{eventId}/participants/{userId} {
      allow read: if true;
      allow write: if isOwner(userId);
    }

    // System Config - Globally readable for simulation calibration
    match /system_configs/{configId} {
      allow read: if true;
      allow write: if false;
    }
  }
}